<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_search_screen</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="heading_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="small_medium_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="small_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="search_history_heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_primary_99</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="category_heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="category_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>

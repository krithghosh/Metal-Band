<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_card_height"
    android:layout_marginBottom="@dimen/card_padding_half"
    android:layout_marginLeft="@dimen/card_padding_half"
    android:layout_marginRight="@dimen/card_padding_half"
    android:layout_marginTop="@dimen/card_padding_half"
    android:background="@color/color_white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/radius_2"
    app:cardElevation="@dimen/elevation_high"
    app:contentPadding="@dimen/card_padding_half">

    <TextView
        android:id="@+id/tv_name"
        style="@style/small_medium_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top" />

    <TextView
        android:id="@+id/tv_genre"
        style="@style/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom" />

    <TextView
        android:id="@+id/tv_country"
        style="@style/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom" />
</android.support.v7.widget.CardView>